@model EasyPropertyRental.Models.Apartment

@{
    ViewData["Title"] = "Apartment Details";
}

<div class="container">
    <h1>Apartment Details</h1>

    <div class="row mb-3">
        <!-- Building Information -->
        <div class="col">
            <label for="buildingName">Building Name</label>
            <input type="text" class="form-control" id="buildingName" value="@Model.Building.Name" readonly />
        </div>

        <div class="col">
            <label for="buildingAddress">Building Address</label>
            <input type="text" class="form-control" id="buildingAddress" value="@Model.Building.Address" readonly />
        </div>
    </div>

    <div class="row mb-3">
        <!-- Apartment Information -->
        <div class="col">
            <label for="unitNumber">Unit Number</label>
            <input type="text" class="form-control" id="unitNumber" value="@Model.UnitNumber" readonly />
        </div>

        <div class="col">
            <label for="floor">Floor</label>
            <input type="number" class="form-control" id="floor" value="@Model.Floor" min="1" readonly />
        </div>
    </div>

    <div class="row mb-3">
        <div class="col">
            <label for="bedrooms">Bedrooms</label>
            <input type="number" class="form-control" id="bedrooms" value="@Model.Bedrooms" min="1" readonly />
        </div>

        <div class="col">
            <label for="bathrooms">Bathrooms</label>
            <input type="number" class="form-control" id="bathrooms" value="@Model.Bathrooms" min="1" readonly />
        </div>
    </div>

    <div class="row mb-3">
        <div class="col">
            <label for="rent">Rent</label>
            <input type="number" class="form-control" id="rent" value="@Model.Rent" step="0.01" min="0" readonly />
        </div>
    </div>

    <br />
    <a class="btn btn-secondary" href="@Url.Action("Index", "Apartments")">Back to Apartment List</a>
</div>


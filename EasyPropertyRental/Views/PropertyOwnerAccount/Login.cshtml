@model EasyPropertyRental.Models.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<h1>Owner Login</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Login">
            <!-- Validation Summary -->
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- Email Input -->
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <br />
            <!-- Password Input -->
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <!-- Login Button and Register Link -->
            <br />
            <div class="form-group d-flex align-items-center gap-2">
                <input type="submit" value="Login" class="btn btn-primary" />
                <a asp-controller="PropertyOwnerAccount" asp-action="Registration" class="btn btn-link">Register</a>
            </div>
        </form>
    </div>
</div>

<br/>
<div>
    <a asp-controller="Home" asp-action="Index">Go Back</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

@model EasyPropertyRental.Models.Building

@{
    ViewData["Title"] = "Edit Manager";
}

<h1>Edit</h1>

<h4>Building</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditManager" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="BuildingId" />
            <div class="form-group">
                <input type="hidden" asp-for="Name" value="@ViewBag.Name" />
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="Address" value="@ViewBag.Address" />
            </div>
            <div class="form-group">
                <label asp-for="PmId" class="control-label"></label>
                <select asp-for="PmId" class="form-control" asp-items="ViewBag.PmId"></select>
                <span asp-validation-for="PmId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

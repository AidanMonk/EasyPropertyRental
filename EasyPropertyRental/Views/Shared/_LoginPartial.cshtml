@if (Context.User.Identity.Name != null)
{
    <form asp-controller="PropertyOwnerAccount" asp-action="Logout" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right d-flex align-items-center">
            <li class="d-flex align-items-center me-3">
                Hello @Context.User.Identity.Name!
            </li>
            <li>
                <button type="submit" class="btn btn-link navbar-btn navbar-link">Log off</button>
            </li>
        </ul>
    </form>
    
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li><a class="nav-link text-dark" asp-controller="PropertyOwnerAccount" asp-action="Registration">Register</a></li>
        <li><a class="nav-link text-dark" asp-controller="PropertyOwnerAccount" asp-action="Login">Login</a></li>
    </ul>

}
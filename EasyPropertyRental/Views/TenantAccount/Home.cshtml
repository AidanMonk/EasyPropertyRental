<div class="container mt-4">
    <div class="text-center mb-4">
        <h4 class="fw-bold">Hello, @ViewBag.Name!</h4>
        <p class="text-muted">how are you doing today?</p>
    </div>

    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        <div class="col">
            <div class="card h-100 text-center shadow">
                <div class="card-body">
                    <h5 class="card-title">Apartment</h5>
                    <p class="card-text">View your apartment information.</p>
                    <a asp-action="ApartmentDetails" class="btn btn-primary">Go</a>
                </div>
            </div>
        </div>

        <div class="col">
            <div class="card h-100 text-center shadow">
                <div class="card-body">
                    <h5 class="card-title">Messages</h5>
                    <p class="card-text">See your messages.</p>
                    <a asp-controller="Messages" asp-action="ChooseAction" class="btn btn-primary">Go</a>
                </div>
            </div>
        </div>
    </div>
</div>